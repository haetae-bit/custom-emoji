---
import { Font } from "astro:assets";
import "../assets/styles/base.css";

interface Props {
  title?: string;
}

const { title = "emoji!" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, interactive-widget=resizes-content">
    <title>{title}</title>
    <Font cssVariable="--dotgothic" preload />
    <Font cssVariable="--galmuri" preload />
    <Font cssVariable="--galmurimono" />
  </head>
  <body>
    <slot />
  </body>
</html>